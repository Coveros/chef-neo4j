production:
  host: <%= node['neo4j']['mongo_host'] %>
  port: <%= node['neo4j']['mongo_port'] %>
<% if node['neo4j']['MONGO_AUTH'] == true %>                                                                           
  username: <%= node['neo4j']['mongo_user'] %>
  password: <%= node['neo4j']['mongo_passwd'] %>
<% else %>
  username:
  password:
  database: <%= node['neo4j']['mongo_database'] %>
<% end %>
